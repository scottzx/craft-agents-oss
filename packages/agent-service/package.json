{
  "name": "@craft-agent/agent-service",
  "version": "0.1.0",
  "description": "AI Agent API Service - HTTP API for Claude Agent SDK",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --skipLibCheck",
    "start": "bun run dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@craft-agent/shared": "workspace:*",
    "@craft-agent/core": "workspace:*",
    "fastify": "^5.2.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/rate-limit": "^10.2.0",
    "jsonwebtoken": "^9.0.2",
    "wx-server-sdk": "~2.6.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "typescript": "^5.0.0"
  }
}
